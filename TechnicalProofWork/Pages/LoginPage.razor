<!-- LoginPage.razor -->
@page "/login"
@layout MainLayout

<div class="min-h-screen bg-gradient-to-br from-zinc-900 via-gray-900 to-orange-900 flex items-center justify-center">
    <div class="bg-white bg-opacity-10 p-8 rounded-lg shadow-md w-full max-w-md backdrop-filter backdrop-blur-md animate-fade-in">
        <h2 class="text-3xl font-bold mb-6 text-center text-white animate-text-glow">Login</h2>
        <div class="mb-4">
            <input @bind="@username" placeholder="Enter your username" class="w-full px-4 py-2 bg-white bg-opacity-20 border border-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-orange-600 text-white placeholder-gray-400" />
        </div>

        <div class="mb-6">
            <input type="password" @bind="@password" placeholder="Enter your password" class="w-full px-4 py-2 bg-white bg-opacity-20 border border-transparent rounded-md focus:outline-none focus:ring-2 focus:ring-orange-600 text-white placeholder-gray-400" />
        </div>

        <div class="flex justify-between items-center mb-6">
            <div class="flex items-center">
                <input type="checkbox" @bind="@rememberMe" id="rememberMe" class="form-checkbox h-5 w-5 text-orange-600 transition duration-300" />
                <label for="rememberMe" class="ml-2 text-white">Remember me</label>
            </div>

            <a href="#" class="text-white hover:text-orange-200 transition duration-300">Forgot password?</a>
        </div>

        <button @onclick="HandleLogin" class="w-full py-2 px-4 rounded-md bg-orange-600 text-white hover:bg-orange-700 transition duration-300 transform hover:scale-105">Login</button>
    </div>
</div>